<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="text-center">Edit <%= poll.name %></h1>
    <div style="width: 30%; margin: 25px auto">
      <form class="" action="/polls/<%= poll._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <label>Title</label>
          <input class="form-control" type="text" value="<%=poll.title%>" name="poll[title]">
        </div>
        <div class="form-group">
          <label>Description</label>
          <input class="form-control" type="text" value="<%=poll.description%>" name="poll[description]">
        </div>
          <div class="form-group">
            <% poll.choices.choices.forEach(function(choice,i){ %>
              <label>Choice <%= i %></label><br />

            Choice:<input class="form-control" type="text" value="<%=choice%>" name="poll[choices.choices]">
            Votes:<input class="form-control" type="number" value="<%=poll.choices.values[i]%>" name="poll[choices.values]" min="0">
            <%})%>
            <label>New Choice</label><br />

            Choice:<input class="form-control" type="text" value="add new choice" name="poll[choices.choices]">
            Votes:<input class="form-control" type="number" value="0" name="poll[choices.values]" min="0">
          </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" >Submit!</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

<%include  ../partials/footer %>
