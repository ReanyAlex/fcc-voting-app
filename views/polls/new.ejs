<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="text-center">Create a Poll</h1>
    <div style="width: 30%; margin: 25px auto">
      <form class="" action="/polls" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="title" name="title">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="description" name="description">
        </div>
        <div class="form-group">
          <textarea class="form-control" type="text" placeholder="Seperate multiple choices by a comma" name="choices"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" >Submit!</button>
        </div>
      </form>
      <a href="/polls">Go Back</a>
    </div>
  </div>
</div>

<%include  ../partials/footer %>
